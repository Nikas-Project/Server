  },
  "devDependencies": {
    "jest": "29.3.0",
    "webpack": "5.74.0",
    "webpack-cli": "4.10.0",
    "fibers": "5.0.3",
    "gulp": "4.0.2",
    "gulp-autoprefixer": "8.0.0",
    "gulp-sass": "5.1.0",
    "gulp-sourcemaps": "3.0.0",
    "node-sass": "7.0.3",
    "sass": "1.55.0"
  }
}
