root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

# Docstrings and comments use max_line_length = 79
[*.py]
max_line_length = 119

# Use 2 spaces for the HTML/YAML files
[*.{html,yml,yaml}]
indent_size = 2

# The JSON files contain newlines inconsistently
[*.json]
indent_size = 2
insert_final_newline = false

# env file configuration. specialy for version.env
[*.env]
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

[Makefile]
insert_final_newline = true
indent_style = tab
